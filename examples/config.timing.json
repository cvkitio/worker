{
    "receivers": [
        {
            "name": "webcam_input",
            "type": "webcam",
            "source": 0
        }
    ],
    "detectors": [
        {
            "name": "face_detector",
            "type": "face_detector",
            "variant": "dlib",
            "frequency_ms": 500,
            "scale": 1.0,
